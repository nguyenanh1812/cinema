<title><%= @movie.name %> </title>
<br>
<p class= "movie_poster">
  <img src="<%= @movie.image_link %>", class="img-thumbnail">
</p>

<h2>
<strong>
  <%= @movie.title %>
</strong></h2><hr>
<p>
  <strong>Tên:</strong>
  <%= @movie.name %>
</p>

<p>
  <strong>Diễn viên:</strong>
  <%= @movie.cast %>
</p>
<p>
  <strong>Thể loại:</strong>
  <!--<%= @movie.genre_id %>-->
  <% @genre.each do |a| %>
    <%= a.name%>
  <% end %>
</p>
<p>
  <strong>Thời lượng:</strong>
  <%= @movie.time %>
</p>
<p>
  <strong>Khởi chiếu:</strong>
  <%= @movie.release %>
</p>
<p>
  <strong>Mô tả:</strong>
  <%= @movie.description %>
</p>
<p class="button btn-booking" style="border-radius: 5px;"><button class="button btn-booking" style="border: 3px solid white; border-radius: 50px; margin: 2px; padding: 5px ;" onclick="trailerFunction()"> Trailer</button></p>

<iframe src="https://www.facebook.com/v2.0/plugins/like.php?action=like&amp;app_id=&amp;channel=https%3A%2F%2Fstaticxx.facebook.com%2Fx%2Fconnect%2Fxd_arbiter%2F%3Fversion%3D46%23cb%3Dfbe6a02629645%26domain%3Dwww.cgv.vn%26is_canvas%3Dfalse%26origin%3Dhttps%253A%252F%252Fwww.cgv.vn%252Ff19a1f748b354f8%26relation%3Dparent.parent&amp;container_width=86&amp;href=https%3A%2F%2Fwww.cgv.vn%2Fdefault%2Fchien-binh-cuoi-cung.html&amp;layout=button_count&amp;locale=en_US&amp;sdk=joey&amp;share=false&amp;show_faces=true" 
style="border: none; visibility: visible; width: 90px; height: 28px;" ></iframe>
<br>
<button type="button" title="Mua vé" class="button btn-booking" onclick="myFunction()">
	<span><span>Xem xuất chiếu</span></span>
</button>
<br>
<!-- <button onclick="window.open('https://www.youtube.com/embed/aWzlQ2N6qqg', 'newwindow', 'width=640,height=320, left=-30,top=-300'); return false;">Trailers</button> -->

<div id="order" style="display: none;">
  <%= render 'movie/order' %>
  <br>
  <button type="button" title="Mua vé" class="button" onclick="myFunction()">
	  <span><span>Đóng</span></span>
  </button>
</div>
<div id="trailer" style="display:none; clear: both; margin-top:20px" class="ratio ratio-16x9">
  <% if @movie.url_trailer %>
    <iframe src="<%= @movie.url_trailer %> " title="YouTube video" allowfullscreen></iframe>
  <% else %>
    <iframe src="https://www.youtube.com/embed/aWzlQ2N6qqg" title="YouTube video" allowfullscreen></iframe>
  <% end %>
</div>
<script>
function myFunction() {
  var x = document.getElementById("order");
  if (x.style.display === "block") {
    x.style.display = "none";
  } else {
    x.style.display = "block";
  }
}

function trailerFunction(){
  var x = document.getElementById("trailer")
  if (x.style.display === "block") {
    x.style.display = "none";
  } else {
    x.style.display = "block";
  }
}
</script>

<p style="clear:left; float:right;">
  <%= link_to 'Quay lại', movie_index_path %>
<p>


				